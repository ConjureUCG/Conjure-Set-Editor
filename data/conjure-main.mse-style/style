####################################### Extra scripts

init script:
	card_shape := { "normal" }
	
	swap_fonts_name_default :=
	[
		name: {"Book Antiqua Bold"},
		size: {64},
		color: {"black"},
		vertical: {0},
		italic: {"Book Antiqua Bold Italic"}
	]
	swap_fonts_type_default :=
	[
		name: {"Book Antiqua Bold"},
		size: {38},
		color: {"black"},
		vertical: {0},
		italic: {"Book Antiqua Bold Italic"}
	]
	swap_fonts_rule_default :=
	[
		name: {"Book Antiqua"},
		size: {64},
		color: {"black"},
		vertical: {0},
		italic: {"Book Antiqua Italic"}
	]
	swap_fonts_lore_default :=
	[
		name: {"Book Antiqua"},
		size: {44},
		color: {"black"},
		vertical: {0},
		italic: {"Book Antiqua Italic"}
	]
	swap_fonts_info_default :=
	[
		name: {"Book Antiqua"},
		size: {26},
		color: {rgb(185,180,185)},
		vertical: {0},
		italic: {"Book Antiqua Italic"}
	]
	
	namebox_background_image := { background_image(color: styling.namebox_color, alpha: styling.namebox_opacity_percentage) }
	typebox_background_image := { background_image(color: styling.typebox_color, alpha: styling.typebox_opacity_percentage) }
	textbox_background_image := { background_image(color: styling.textbox_color, alpha: styling.textbox_opacity_percentage) }
	
	lore_bar_height := { 50 }
	
	rule_text_bottom :=
	{
		if has_lore() then (1896 - lore_bar_height()/2 - card_style.lore_text_1.content_lines*64) else 1912
	}
	
	border_mask :=
	{
		"/conjure-shared.mse-include/outer border mask" + (if card.outer_border_1 == "bottom" or card.outer_border_1 == "bottom full art" then " bottom" else "") + ".png"
	}
	
	art_mask :=
	{
		boxes :=	"image mask.png"
		outer :=	"/conjure-shared.mse-include/outer border image mask" + (if card.outer_border_1 == "bottom" or card.outer_border_1 == "bottom full art" then " bottom" else "") + ".png"
		inner :=	"/conjure-shared.mse-include/inner border image mask.png"
		base :=		if card.outer_border_1 == "hidden" then boxes else combine_blend(image1: boxes, image2: outer, combine: "multiply")
		final :=	if card.inner_border_1 == "hidden" then base else combine_blend(image1: base, image2: inner, combine: "multiply")
		crop(final, offset_x: 2 * art_left(), offset_y: 2 * art_top(), width: 2 * (art_right() - art_left()), height: 2 * (art_bottom() - art_top()))
	}
	
	art_left :=		{ 0 }
	art_right :=	{ stylesheet.card_width }
	art_top :=		{ if styling.stretch_art_to_whole_card or card.outer_border_1 != "top and bottom"	then 0																					else 310 }
	art_bottom :=	{ if styling.stretch_art_to_whole_card or card.outer_border_1 == "hidden"			then stylesheet.card_height	else if card.inner_border_1 == "hidden"			then 1848	else 1320 }
		

####################################### Styling fields

styling field:
	type:			text
	name:			popout art coordinates
	description:	The coordinates for the popout image field, formatted as "left,top,width,height". Used to make the illustration jump in front of the frame.
styling field:
	type:			boolean
	name:			stretch art to whole card
	description:	Make the image span the whole card instead of just the visible part. Use this to help make popout effects.
	initial:		no

styling field:
	type:			boolean
	name:			center name
	description:	Center the name on the card.
	initial:		no
styling field:
	type:			text
	name:			custom name font
	description:	Formatted as "font name;font size;font color;vertical offset;italic font name" last 4 are optional. Color can be a name or R,G,B,A numbers.
styling field:
	type:			text
	name:			namebox opacity percentage
	description:	Set the opacity percentage for the namebox. Opaque is 100, transparent is 0, default is 45.
styling field:
	type:			color
	name:			namebox color
	description:	Use the specified color for the namebox background.
	choice:
		name:			black
		color:			rgb(0,0,0)
	choice:
		name:			white
		color:			rgb(255,255,255)
	initial:		rgb(255,255,255)

styling field:
	type:			boolean
	name:			center type
	description:	Center the type on the card.
	initial:		no
styling field:
	type:			text
	name:			custom type font
	description:	Formatted as "font name;font size;font color;vertical offset;italic font name" last 4 are optional. Color can be a name or R,G,B,A numbers.
styling field:
	type:			text
	name:			typebox opacity percentage
	description:	Set the opacity percentage for the typebox. Opaque is 100, transparent is 0, default is 45.
styling field:
	type:			color
	name:			typebox color
	description:	Use the specified color for the textbox background.
	choice:
		name:			black
		color:			rgb(0,0,0)
	choice:
		name:			white
		color:			rgb(255,255,255)
	initial:		rgb(255,255,255)

styling field:
	type:			choice
	name:			center rule text
	description:	When to center rule text on the card.
	choice:			always
	choice:			3 lines or less
	choice:			2 lines or less
	choice:			1 line or less
	choice:			never
	initial:		2 lines or less
styling field:
	type:			choice
	name:			align rule text vertically
	description:	How to center rule text vertically on the card.
	choice:			top
	choice:			middle
	choice:			bottom
	initial:		middle
styling field:
	type:			text
	name:			custom rule font
	description:	Formatted as "font name;font size;font color;vertical offset;italic font name" last 4 are optional. Color can be a name or R,G,B,A numbers.
styling field:
	type:			text
	name:			custom lore font
	description:	Formatted as "font name;font size;font color;vertical offset;italic font name" last 4 are optional. Color can be a name or R,G,B,A numbers.
styling field:
	type:			text
	name:			textbox opacity percentage
	description:	Set the opacity percentage for the textbox. Opaque is 100, transparent is 0, default is 45.
styling field:
	type:			color
	name:			textbox color
	description:	Use the specified color for the textbox background.
	choice:
		name:			black
		color:			rgb(0,0,0)
	choice:
		name:			white
		color:			rgb(255,255,255)
	initial:		rgb(255,255,255)

styling field:
	type:			text
	name:			custom info font
	description:	Formatted as "font name;font size;font color;vertical offset;italic font name" last 4 are optional. Color can be a name or R,G,B,A numbers.

styling field:
	type:			boolean
	name:			automatic collector number
	description:	Automatically calculate the card number, or manually type it in?

