
card field:
	type: multiple choice
	name: frame 1
	show statistics: false
	choice: red
	choice: orange
	choice: yellow
	choice: green
	choice: blue
	choice: indigo
	choice: violet
	choice:
		name: grey
		line below: true
	choice:
		name: blend
		choice: reversed
		choice:
			name: vertical
			line below: true
		choice: offset 1
		choice: offset 2
		choice: offset 4
	empty choice: grey
	default: stylesheet; frame_default(input: value, id: 1)
	script: card.mana_cost_1; card.super_type_1; frame_script(input: value, id: 1)
	card list visible: true
	card list name: Color
	card list column: 40
	card list width: 170
	description: The background frame of the card.

